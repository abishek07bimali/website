pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                script {
                    def scmVars = checkout([$class: 'GitSCM', branches: [[name: '*/main']], doGenerateSubmoduleConfigurations: false, extensions: [], userRemoteConfigs: [[url: 'https://github.com/abishek07bimali/website.git']]])
                    echo "Checked out 'main' branch"
                }
            }
        }

        stage('Deploy to Local Server') {
            steps {
                sh "cp -r * /var/www/html/" // Assuming your local server root directory is /var/www/html/

                // Optionally, you can perform additional deployment steps here.
            }
        }
    }

    post {
        always {
            cleanWs()
        }
    }
}
